                      Width="200"
                      Margin="1"
                      DisplayMemberPath="Nombre"
                      ItemsSource="{Binding Sucursales}"
                      SelectedItem="{Binding SucursalSeleccionada,
                                             Mode=TwoWay,
                                             UpdateSourceTrigger=PropertyChanged}" />
