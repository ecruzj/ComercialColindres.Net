                         Width="200"
                         Margin="1"
                         HorizontalAlignment="Center"
                         VerticalAlignment="Top"
                         wpfCoreHelpers:PasswordHelper.Password="{Binding Clave,
                                                                  Mode=TwoWay,
                                                                  UpdateSourceTrigger=PropertyChanged}"
                         controls:TextboxHelper.ClearTextButton="True"
                         my:EnterKeyHelpers.EnterKeyCommand="{Binding ComandoEntrarSistema}"/>
